<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="444dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingBottom="24dp"
        android:layout_width="444dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_login_white_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="温馨提示"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_free_popup_x"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="19dp"
            android:src="@mipmap/xmark" />

        <TextView
            android:gravity="center"
            android:layout_marginEnd="22dp"
            android:layout_marginStart="22dp"
            android:id="@+id/tv_free_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="84dp"
            android:text="温馨提示：自由训练不会训练生成报告"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_below="@id/tv_free_content"

            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/bt_free_yes"
                android:background="@drawable/shape_bt_20_40e2c1"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="确定"
                android:layout_marginTop="23dp"
                android:layout_width="144dp"
                android:layout_height="42dp"/>

            <Button
                android:visibility="gone"
                android:layout_marginStart="50dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/bt_free_no"
                android:background="@drawable/shape_bt_20_red"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="立即结束"
                android:layout_marginTop="23dp"
                android:layout_below="@id/tv_free_content"
                android:layout_width="144dp"
                android:layout_height="42dp"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>