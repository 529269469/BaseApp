<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="444dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="444dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_login_white_20"
        android:paddingBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="温馨提示"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_stop_popup_x"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="19dp"
            android:src="@mipmap/xmark" />

        <TextView
            android:id="@+id/tv_stop_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="22dp"
            android:text="训练结束，您的身心训练报告已生成"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <Button
            android:id="@+id/bt_stop_yes"
            android:layout_width="144dp"
            android:layout_height="42dp"
            android:layout_below="@id/tv_stop_content"
            android:layout_marginStart="66dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/shape_bt_20_40e2c1"
            android:text="立即查看"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:layout_alignParentEnd="true"
            android:id="@+id/bt_stop_no"
            android:layout_width="144dp"
            android:layout_height="42dp"
            android:layout_below="@id/tv_stop_content"
            android:layout_marginEnd="66dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/shape_bt_20_000"
            android:text="稍后查看"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

</RelativeLayout>