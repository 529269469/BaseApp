<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="167dp"
    android:layout_height="163dp">


    <RelativeLayout
        android:layout_width="167dp"
        android:layout_height="163dp">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/iv_layout_adapter_my_list_item"
            android:layout_width="167dp"
            android:layout_height="117dp"/>

        <TextView
            android:textStyle="bold"
            android:layout_below="@id/iv_layout_adapter_my_list_item"
            android:text="冥想练习第一章"
            android:id="@+id/tv_layout_adapter_my_list_item_title"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/tv_layout_adapter_my_list_item_title"
            android:text=""
            android:id="@+id/tv_layout_adapter_my_list_item_time"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>