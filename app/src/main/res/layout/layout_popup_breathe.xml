<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="444dp"
    android:layout_height="264dp">

    <RelativeLayout
        android:layout_width="444dp"
        android:layout_height="264dp"
        android:background="@drawable/shape_login_white_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="选择训练时长"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_compile_popup_breath_x"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="19dp"
            android:src="@mipmap/xmark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="33dp">

            <View
                android:id="@+id/v_popup_breath_5"
                android:background="@drawable/shape_feel1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <View
                android:id="@+id/v_popup_breath_10"
                android:background="@drawable/shape_feel2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_weight="1" />

            <View
                android:id="@+id/v_popup_breath_15"
                android:background="@drawable/shape_feel2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_weight="1" />

            <View
                android:id="@+id/v_popup_breath_20"
                android:background="@drawable/shape_feel5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="20dp"
                android:layout_marginTop="146dp"
                android:layout_marginStart="34dp"
                android:textColor="@color/black"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="20dp"
                android:layout_marginTop="146dp"
                android:layout_marginStart="75dp"
                android:textColor="@color/black"
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="20dp"
                android:layout_marginTop="146dp"
                android:layout_marginStart="81dp"
                android:textColor="@color/black"
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="20dp"
                android:layout_marginTop="146dp"
                android:layout_marginStart="75dp"
                android:textColor="@color/black"
                android:text="15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="20dp"
                android:layout_marginTop="146dp"
                android:layout_marginStart="66dp"
                android:textColor="@color/black"
                android:text="20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_popup_breathe_begin"
            android:background="@drawable/shape_bt_20_40e2c1"
            android:layout_marginTop="205dp"
            android:layout_centerHorizontal="true"
            android:text="开始训练"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="144dp"
            android:layout_height="42dp"/>



    </RelativeLayout>

</RelativeLayout>