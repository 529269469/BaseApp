<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/shape_report_16"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/pdf1"
            android:layout_width="22dp"
            android:layout_height="22dp"/>

        <TextView
            android:id="@+id/tv_layout_adapter_report_list_title"
            android:layout_centerVertical="true"
            android:layout_marginStart="43dp"
            android:textSize="12sp"
            android:textColor="@color/color_7B6F72"
            android:text="放松冥想身心反馈报告"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:layout_marginEnd="12dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/pdf1"
            android:layout_width="18dp"
            android:layout_height="18dp"/>

        <TextView
            android:id="@+id/tv_layout_adapter_report_list_time"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="36dp"
            android:textSize="12sp"
            android:textColor="@color/color_7B6F72"
            android:text="放松冥想身心反馈报告"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>