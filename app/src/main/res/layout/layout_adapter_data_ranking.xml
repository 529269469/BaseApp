<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="229dp"
    android:layout_height="203dp">

    <com.william.widget.RoundImageView
        app:riv_radius="10dp"
        android:scaleType="fitXY"
        android:id="@+id/iv_data_ranking"
        android:src="@mipmap/group10348"
        android:layout_width="229dp"
        android:layout_height="160dp"/>


    <TextView
        android:id="@+id/tv_data_ranking_num"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="1"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="@mipmap/group5"
        android:layout_alignParentRight="true"
        android:layout_width="32dp"
        android:layout_height="32dp"/>

    <TextView
        android:id="@+id/tv_data_ranking_title"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:text="冥想练习第一章"
        android:layout_marginTop="13dp"
        android:layout_below="@id/iv_data_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="13dp"
        android:layout_below="@id/iv_data_ranking"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:drawableLeft="@mipmap/liulan_2_1"
        android:id="@+id/tv_data_ranking_look"
        android:textSize="10sp"
        android:textColor="@color/color_A3A3A3"
        android:text="20394"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>